<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/size_3dp"
    android:elevation="@dimen/size_10dp"
    app:cardCornerRadius="@dimen/size_15dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="@dimen/size_20dp"
            android:padding="@dimen/size_5dp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tvtitleview"/>
        <TextView
            android:id="@+id/tvdescriptionview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="#808080"
            android:padding="@dimen/size_3dp"
            android:textSize="@dimen/size_15dp"/>
        <TextView
            android:id="@+id/tvdateview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date"
            android:paddingRight="@dimen/size_3dp"
            android:textColor="#808080"
            android:layout_gravity="right"
            android:textSize="@dimen/size_10dp"/>

    </LinearLayout>
</androidx.cardview.widget.CardView>