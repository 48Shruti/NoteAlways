<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView  xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:elevation="@dimen/size_30dp"
    app:cardCornerRadius="@dimen/size_30dp"
    android:layout_margin="@dimen/size_15dp"
    android:backgroundTint="#808080"
    android:layout_marginTop="@dimen/size_20dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/introsplash"
            android:layout_margin="@dimen/size_20dp"
            android:textStyle="bold"
            android:textSize="@dimen/size_30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_20dp"
            android:id="@+id/btnNoteClick"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_notes_24"
                android:paddingStart="@dimen/size_20dp"
                android:paddingTop="@dimen/size_10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/notes"
                android:textSize="@dimen/size_25sp"
                android:textStyle="bold"
                android:paddingStart="@dimen/size_20dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_20dp"
            android:id="@+id/btnTodoClick"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_check_box_outline_blank_24"
                android:paddingStart="@dimen/size_20dp"
                android:paddingTop="@dimen/size_10dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/todo"
                android:textSize="@dimen/size_25sp"
                android:textStyle="bold"
                android:paddingStart="@dimen/size_20dp"/>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
