<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".15"
        android:id="@+id/guide_h_20"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".6"
        android:id="@+id/guide_h_60"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/guide_h_20"
        app:layout_constraintBottom_toBottomOf="@id/guide_h_60"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/notepen"
        android:id="@+id/imglogo"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/introsplash"
        android:textSize="@dimen/size_30dp"
        app:layout_constraintTop_toBottomOf="@id/guide_h_60"
        android:padding="@dimen/size_20dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:id="@+id/tvsplash"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tvsplash"
        android:text="@string/start"
        android:textColor="@color/white"
        android:backgroundTint="@color/black"
        android:layout_margin="@dimen/size_40dp"
        android:id="@+id/btnstart"

        />
</androidx.constraintlayout.widget.ConstraintLayout>
